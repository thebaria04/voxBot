# Teams AI Foundry Bot Environment Configuration

# Bot Framework Configuration
MICROSOFT_APP_ID=your-bot-app-id
MICROSOFT_APP_TYPE=MultiTenant
MICROSOFT_APP_TENANT_ID=your-tenant-id

# Azure Key Vault Configuration
AZURE_KEY_VAULT_URI=https://your-keyvault.vault.azure.net/
AZURE_KEY_VAULT_CERTIFICATE_NAME=teams-bot-auth-cert
# Optional password for the certificate (if the PKCS#12 certificate is password protected)
AZURE_KEY_VAULT_CERTIFICATE_PASSWORD=

# Authentication Configuration
# Set to 'true' to use certificate authentication (recommended for production)
# Set to 'false' to use client secret authentication (simpler for development)
USE_CERTIFICATE_AUTH=false
MICROSOFT_APP_PASSWORD=your-bot-app-secret

# Azure AI Foundry Configuration
AI_FOUNDRY_ENDPOINT=https://your-ai-foundry-endpoint.com/v1/chat/completions
AI_FOUNDRY_API_KEY=your-ai-foundry-api-key
AI_FOUNDRY_DEPLOYMENT_NAME=your-deployment-name
AI_FOUNDRY_MODEL_NAME=gpt-4

# Azure Cognitive Services Speech Configuration
SPEECH_SERVICE_KEY=your-speech-service-key
SPEECH_SERVICE_REGION=eastus
SPEECH_LANGUAGE=en-US
SPEECH_VOICE_NAME=en-US-JennyNeural

# Microsoft Graph Configuration
GRAPH_SCOPES=https://graph.microsoft.com/.default

# Server Configuration
PORT=3978
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bot.log

# Teams Meeting Configuration
ALLOW_MEETING_JOIN=true
AUTO_JOIN_MEETINGS=false
